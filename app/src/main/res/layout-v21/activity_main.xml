<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yokara.testforkara.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.yokara.testforkara.Player
        android:id="@+id/vView"
        android:layout_width="300dp"
        android:layout_height="300dp" />

    <Button
        android:id="@+id/mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vView"
        android:text="Mute" />

    <Button
        android:id="@+id/unMute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mute"
        android:text="unmute" />

    <SeekBar
        android:id="@+id/seek1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/unMute"
        android:max="100"
        android:progress="10"
        android:secondaryProgress="30"

        android:secondaryProgressTint="@color/colorPrimaryDark"
        android:thumb="@mipmap/ic_launcher" />

    <SeekBar
        android:id="@+id/seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seek1"
        android:max="100"
        android:paddingTop="10dp"
        android:progress="10"
        android:scrollbarSize="@dimen/exo_media_button_height"
        android:secondaryProgress="20" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seek">

        <TextView
            android:id="@+id/tvStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:text="00:00:" />

        <TextView
            android:id="@+id/tvEnd"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="00:00:" />
    </RelativeLayout>

</RelativeLayout>
